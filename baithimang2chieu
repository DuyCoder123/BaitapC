#include<stdio.h>
#define MAX 10
void Nhap(int a[MAX][MAX], int &n){
	do{
		printf("Nhap n (2<=n<=10): ");
		scanf("%d", &n);
	}while(n<2||n>10);
	for(int i=0; i<n; i++){
		for(int j=0; j<n; j++){
			printf("a[%d][%d]= ", i, j);
			scanf("%d", &a[i][j]);
			
		}
	}
}
void Xuat(int a[MAX][MAX], int n){
	for(int i=0; i<n; i++){
		for(int j=0; j<n; j++){
			printf("%d	", a[i][j]);
		}
		printf("\n");
	}
}
void DemPT(int a[MAX][MAX], int n){
	int dem=0;
	int min=a[0][n-1];
	for(int i=0; i<n; i++){
		for(int j=0; j<n; j++){
			if(j>i && min>a[i][j])
			min=a[i][j];
		}
	}
	for(int i=0; i<n; i++){
		for(int j=0; j<n; j++){
			if(j>i && min==a[i][j])
			dem++;
		}
	}
	printf("Co %d phan tu cung nho nhat nua tren cheo chinh!", dem);
}
void swap(int &x, int &y){
	int tem=x;
	x=y;
	y=tem;
}
void KT_Daytang(int a[MAX][MAX], int n, int d){
	int cnt=0;
	for(int i=0; i<n-1; i++){
		if(a[d][i]>a[d][i+1])
		cnt++;
		for(int j=0; j<n-1; j++){
			for(int k=j+1; k<n; k++){
				if(a[d][j]>a[d][k])
				swap(a[d][j],a[d][k]);
			}
		}
	}
	if(cnt==0)
	printf("\nDong %d co day tang dan!", d);
	else
	Xuat(a,n);
}
int main(){
	int a[MAX][MAX], n;
	Nhap(a,n);
	printf("Ma tran vua nhap: \n");
	Xuat(a,n);
	DemPT(a,n);
	int d;
	do{
		printf("\nNhap dong kiem tra: ");
		scanf("%d", &d);
	}while(d<0||d>n-1);
	KT_Daytang(a,n,d);
	return 0;
}
